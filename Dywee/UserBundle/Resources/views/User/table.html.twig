{# Dywee\UserBundle\Resources\View\User\table.html.twig #}

{%  extends "DyweeUserBundle::admin.html.twig" %}

{% block breadcrumb %}
    <li><i class="fa fa-users"></i> Utilisateurs</li>
    <li class="active"><i class="fa fa-list-alt"></i> Liste des utilisateurs</li>
{% endblock %}

{% block viewBody %}

    <div class="title-heading">
        <h1 class="text-center">Liste des membres</h1>
    </div>
    {% if userList|length() > 0 %}
        <table class="table table-striped table-hover table-condensed">
            <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th>Type</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {%  for user in userList %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.firstName|capitalize }}</td>
                    <td>{{ user.lastName|capitalize }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        {% if is_granted('ROLE_ADMIN') %}
                            <span class="label label-success">Administrateur</span>
                        {% elseif is_granted('ROLE_ADMIN') %}
                            <span class="label label-default">Utilisateur</span>
                        {% else %}
                            Non reconnu
                        {% endif %}
                    </td>
                    <td>
                        {% if user.active == 0 %}
                            <span class="label label-warning">Désactivé</span>
                        {% elseif user.active == 1 %}
                            <span class="label label-success">Actif</span>
                        {%  endif %}
                    </td>
                    <td> <a href="#" class="link-unstyled" target="_blank"><i class="fa fa-eye"></i> </a>
                            <a href="#" class="link-unstyled"><i class="fa fa-pencil"></i> </a>
                            <a href="#" class="link-unstyled"><i class="fa fa-trash-o"></i> </a>
                        
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Il n'y a pas d'utilisateurs enregistrés</p>
    {% endif %}
{% endblock %}