{# Dywee\UserBundle\Resources\View\User\Registration\register.html.twig #}

{% extends "DyweeUserBundle::layout.html.twig" %}

{% block fos_user_content %}
    <h1>Inscrivez-vous</h1>
    {% form_theme form 'bootstrap_3_layout.html.twig' %}

    {{ form_start(form) }}
    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_label(form.firstName, "Pr√©nom: ") }}
        {{ form_errors(form.firstName) }}
        {{ form_widget(form.firstName) }}
    </div>

    <div class="form-group">
        {{ form_label(form.lastName, "Nom: ") }}
        {{ form_errors(form.lastName) }}
        {{ form_widget(form.lastName) }}
    </div>

    <div class="form-group">
        {{ form_label(form.username, "Nom d'utilisateur: ") }}
        {{ form_errors(form.username) }}
        {{ form_widget(form.username) }}
    </div>

    <div class="form-group">
        {{ form_label(form.email, "Votre adresse e-mail: ") }}
        {{ form_errors(form.email) }}
        {{ form_widget(form.email) }}
    </div>

    {{ form_widget(form.plainPassword) }}

    {{ form_widget(form.submit, {'attr': {'class': 'btn btn-success'}, 'label': 'S\'inscrire'}) }}

    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock fos_user_content %}