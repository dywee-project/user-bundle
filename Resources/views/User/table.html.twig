{# Dywee\UserBundle\Resources\View\User\table.html.twig #}

{%  extends "DyweeUserBundle::admin.html.twig" %}

{% block viewBody %}

    <div class="title-heading">
        <h1 class="text-center">Liste des membres</h1>
    </div>
    <table class="table table-striped table-hover table-condensed">
        <thead>
        <tr>
            <th>#</th>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Statut</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {%  for user in userList %}
            <tr>
                <td><small>{{ user.id }}</small></td>
                <td><small>{{ user.firstName|capitalize }}</small></td>
                <td><small>{{ user.lastName|capitalize }}</small></td>
                <td><small>{% if user.active == 0 %}
                            <span class="label label-warning">Désactivé</span>
                        {% elseif user.active == 1 %}
                            <span class="label label-success">Actif</span>
                        {%  endif %}
                    </small>
                </td>
                <td><small> <a href="#" class="link-unstyled" target="_blank"><i class="fa fa-eye"></i> </a>
                        <a href="#" class="link-unstyled"><i class="fa fa-pencil"></i> </a>
                        <a href="#" class="link-unstyled"><i class="fa fa-trash-o"></i> </a>
                    </small>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}