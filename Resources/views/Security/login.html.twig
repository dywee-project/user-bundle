{% extends "DyweeCoreBundle::login.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <p class="text-muted">Connectez-vous pour accéder votre administration</p>

    <p class="h2">Vos identifiants</p>
    <form action="{{ path("fos_user_security_check") }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <div class="form-group has-feedback">
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" />
            <span class="glyphicon glyphicon-user form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
            <input type="password" id="password" name="_password" required="required" class="form-control" />
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="checkbox icheck">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                </div>
            </div><!-- /.col -->
            <div class="col-xs-12">
                <button type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-primary btn-block btn-flat">Connexion</button>
            </div><!-- /.col -->
        </div>
    </form>
    <p>&nbsp;</p>

    <div class="row">
        <div class="col-md-8">
            <p><a href="{{ path('fos_user_resetting_request') }}">J'ai oublié mon mot de passe</a></p>
        </div>
        <div class="col-md-4">
            <p><a href="{{ path('fos_user_registration_register') }}" class="text-center">M'inscrire</a></p>
        </div>
    </div>



    <hr>
    <p>{#<a class="btn btn-social btn-facebook btn-block"
          href="{{ path('hwi_oauth_service_redirect', {'service': 'facebook' }) }}" alt="Sign in with Facebook">
            <i class="fa fa-facebook"></i> Se connecter avec Facebook
        </a></p>#}
{% endblock body %}
